{
  "template_id": "job-application",
  "name": "Job Application Form",
  "description": "Comprehensive application form for job candidates.",
  "category": "business",
  "industry": "hr",
  "icon": "ðŸ’¼",
  "fields": [
    {
      "type": "text",
      "label": "Full Name",
      "name": "full_name",
      "required": true,
      "placeholder": "John Doe"
    },
    {
      "type": "email",
      "label": "Email Address",
      "name": "email",
      "required": true,
      "placeholder": "john@example.com"
    },
    {
      "type": "phone",
      "label": "Phone Number",
      "name": "phone",
      "required": true,
      "placeholder": "(555) 123-4567"
    },
    {
      "type": "select",
      "label": "Position Applied For",
      "name": "position",
      "required": true,
      "options": ["Software Engineer", "Product Manager", "Marketing Manager", "Sales Representative", "Other"]
    },
    {
      "type": "select",
      "label": "Years of Experience",
      "name": "experience",
      "required": true,
      "options": ["0-2 years", "2-5 years", "5-10 years", "10+ years"]
    },
    {
      "type": "textarea",
      "label": "Cover Letter",
      "name": "cover_letter",
      "required": true,
      "placeholder": "Tell us why you're interested...",
      "rows": 6
    }
  ],
  "sample_data_profiles": {
