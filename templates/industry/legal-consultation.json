{
  "template_id": "legal-consultation",
  "name": "Legal Consultation Request",
  "description": "Initial consultation form for law firms and legal practices.",
  "category": "industry",
  "industry": "legal",
  "icon": "⚖️",
  "fields": [
    {
      "type": "text",
      "label": "Full Name",
      "name": "client_name",
      "required": true,
      "placeholder": "John Doe"
    },
    {
      "type": "email",
      "label": "Email Address",
      "name": "email",
      "required": true,
      "placeholder": "john@example.com"
    },
    {
      "type": "phone",
      "label": "Phone Number",
      "name": "phone",
      "required": true,
      "placeholder": "(555) 123-4567"
    },
    {
      "type": "select",
      "label": "Legal Matter Type",
      "name": "matter_type",
      "required": true,
      "options": ["Family Law", "Criminal Defense", "Business Law", "Estate Planning", "Personal Injury", "Other"]
    },
    {
      "type": "select",
      "label": "Urgency Level",
      "name": "urgency",
      "required": true,
      "options": ["Urgent - Need help immediately", "Important - Within 2 weeks", "Normal - Within a month", "Planning ahead"]
    },
    {
      "type": "textarea",
      "label": "Case Description",
      "name": "case_description",
      "required": true,
      "placeholder": "Please provide details about your legal matter...",
      "rows": 6
    }
  ],
  "sample_data_profiles": {
    "excellent": {
      "client_name": ["Michael Anderson", "Sarah Thompson"],
